
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // An user is an admin if their email matches.
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Rule for the user document itself
    match /users/{userId} {
      // The owner or an admin can read and write the user profile.
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Rule for the orders SUB-COLLECTION
    match /users/{userId}/orders/{orderId} {
        // The user who owns the profile can manage their own orders.
        // This is the CRUCIAL rule that allows order creation.
        allow create, read, update, delete: if request.auth.uid == userId;
        
        // The admin can also read and update any order (e.g., to change status).
        allow read, update: if isAdmin();
    }

    // Rule for the collectionGroup query (for the admin panel)
    // Allows the admin to list ALL orders from ALL users.
    match /{path=**}/orders/{orderId} {
      allow list: if isAdmin();
    }
  }
}
