
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Un utilisateur est admin si son email est celui-ci
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    match /users/{userId} {
      // L'utilisateur authentifié peut lire et écrire sur son propre document et ses sous-collections.
      allow read, write: if request.auth.uid == userId;
      
      // L'admin peut lire les profils des autres pour l'affichage des commandes.
      allow get: if isAdmin();

      // Règle pour la sous-collection des commandes
      match /orders/{orderId} {
        // Un utilisateur authentifié peut créer une commande pour lui-même
        allow create: if request.auth.uid == userId;

        // Seul le propriétaire ou un admin peut lire une commande
        allow read: if request.auth.uid == userId || isAdmin();
        
        // Seul un admin peut mettre à jour ou supprimer une commande
        allow update, delete: if isAdmin();
      }
    }

    // Règle pour la requête `collectionGroup` (pour le panneau d'administration)
    // Permet à l'admin de lister TOUTES les commandes de TOUS les utilisateurs.
    match /{path=**}/orders/{orderId} {
      allow list: if isAdmin();
    }
  }
}
