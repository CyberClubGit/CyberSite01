
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Products are public and can only be written by an admin
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profiles can be created by any authenticated user.
    // They can only be read or updated by their owner or an admin.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // **LA CORRECTION**: Règles pour la sous-collection des commandes.
      // Un utilisateur peut créer/lire ses propres commandes.
      // L'administrateur a accès à tout via la règle `collectionGroup` ci-dessous.
      match /orders/{orderId} {
        allow read, create: if request.auth.uid == userId;
        allow update, delete: if isAdmin(); // Seul l'admin peut modifier/supprimer une commande
      }
    }

    // **LA CORRECTION**: Règle pour le `collectionGroup`.
    // Permet à l'admin de lister toutes les commandes de tous les utilisateurs.
    match /{path=**}/orders/{orderId} {
      allow list, read, update: if isAdmin();
    }
  }
}
