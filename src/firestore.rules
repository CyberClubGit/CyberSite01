rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Un utilisateur est admin si son email correspond.
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Règle pour les profils utilisateurs
    match /users/{userId} {
      // L'utilisateur peut lire et écrire son propre profil. L'admin peut tout lire/écrire.
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // NOUVELLE RÈGLE POUR LA COLLECTION 'orders' A LA RACINE
    match /orders/{orderId} {
        // Un utilisateur connecté peut créer une commande si le 'userId' dans le document
        // correspond à son propre ID d'authentification.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        
        // L'utilisateur peut lire/mettre à jour ses propres commandes.
        allow read, update: if request.auth.uid == resource.data.userId;
        
        // L'admin peut lire et mettre à jour toutes les commandes.
        allow list, read, update: if isAdmin();
    }
  }
}
