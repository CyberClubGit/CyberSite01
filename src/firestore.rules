
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Products are public
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profiles can be created by any authenticated user.
    // They can only be read or updated by their owner.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Orders collection at the root level
    match /orders/{orderId} {
      // A user can create a new order document if the userId in the document matches their own UID.
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // A user can read an order if the userId in the document matches their UID.
      // An admin can also read any order.
      allow read: if (request.auth != null && request.auth.uid == resource.data.userId) || isAdmin();
      
      // Only an admin can update the status of an order.
      allow update: if isAdmin();
      
      // No one can delete orders through the client SDK.
      allow delete: if false;
    }
  }
}
