
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Products are public
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profiles can be created by any authenticated user.
    // They can only be read or updated by their owner.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Orders collection at the root level
    match /orders/{orderId} {
      // A user can create a new order document if the userId in the document matches their own UID.
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // An admin can read or update any order.
      // A user can only read their own orders by querying where userId matches their UID.
      // Direct doc reads are disallowed for non-admins to prevent guessing order IDs.
      allow list, update: if isAdmin();
      allow read: if isAdmin() || (request.auth != null && resource.data.userId == request.auth.uid);
      
      // No one can delete orders through the client SDK.
      allow delete: if false;
    }
  }
}
