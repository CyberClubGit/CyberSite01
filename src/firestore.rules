
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Assuming 'contact@cyber-club.net' is the admin's email.
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Rule for the user profiles collection
    // This is the most critical rule to fix the signup issue.
    match /users/{userId} {
      // A user can create their own profile document.
      // The request.auth.uid must match the document's userId.
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // A logged-in user can read and update their own profile.
      allow read, update: if request.auth != null && request.auth.uid == userId;
      
      // Admin can read and write any user profile.
      allow read, write: if isAdmin();
    }
    
    // Rule for the root 'orders' collection.
    match /orders/{orderId} {
        // Any authenticated user can create an order,
        // as long as the 'userId' in the document matches their own ID.
        allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
        
        // A user can read their own orders.
        // The admin can also read any order.
        allow read: if (request.auth.uid == resource.data.userId) || isAdmin();
        
        // Only the admin can list all orders or update an order's status.
        allow list, update: if isAdmin();

        // No one can delete an order (for safety).
        allow delete: if false;
    }
  }
}
