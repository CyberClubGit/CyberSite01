
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    // Products are public
    match /products/{productId} {
      allow read: if true;
      allow write: if isAdmin(); // Only admin can write to products
    }

    // User profiles can be created, read, and updated by their owner.
    match /users/{userId} {
      allow read, update, create: if request.auth != null && request.auth.uid == userId;

      // Orders sub-collection
      // A user can create an order for themselves.
      // A user can read their own orders.
      match /orders/{orderId} {
          allow create: if request.auth.uid == userId;
          allow read: if request.auth.uid == userId;
      }
    }
    
    // Admin rules for listing and managing ALL orders across ALL users.
    match /users/{userId}/orders/{orderId} {
        allow read, list, update: if isAdmin();
    }
  }
}
