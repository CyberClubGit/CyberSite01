
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Un utilisateur est admin si son email est celui-ci
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    match /users/{userId} {
      // N'importe quel utilisateur authentifié peut créer son propre document de profil
      allow create: if request.auth != null;
      
      // Un utilisateur ne peut lire ou mettre à jour que son propre profil. L'admin peut tout lire/modifier.
      allow read, update: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Règle pour la sous-collection des commandes.
      match /orders/{orderId} {
        // Un utilisateur authentifié peut créer une commande pour lui-même.
        allow create: if request.auth.uid == userId;

        // Seul le propriétaire ou un admin peut lire une commande.
        allow read: if request.auth.uid == userId || isAdmin();
        
        // Seul un admin peut mettre à jour (changer le statut) ou supprimer une commande.
        allow update, delete: if isAdmin();
      }
    }

    // Règle pour la requête `collectionGroup`.
    // Permet à l'admin de lister TOUTES les commandes de TOUS les utilisateurs.
    // C'est ce qui alimente le panneau d'administration.
    match /{path=**}/orders/{orderId} {
      allow list, get, read, update: if isAdmin();
    }
  }
}
