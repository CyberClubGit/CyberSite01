
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // Un utilisateur est admin si son email correspond.
      return request.auth != null && request.auth.token.email == 'contact@cyber-club.net';
    }

    match /users/{userId} {
      // Un utilisateur authentifié peut lire et écrire sur son propre document
      // et toutes ses sous-collections (y compris créer des commandes).
      allow read, write: if request.auth.uid == userId;

      // L'admin peut également lire les profils des utilisateurs.
      allow get: if isAdmin();
      
      // La permission de l'admin pour gérer les commandes est gérée ci-dessous.
    }
    
    // Règle pour la sous-collection des commandes (pour les admins)
    match /users/{userId}/orders/{orderId} {
        // Un admin peut lire, mettre à jour ou supprimer n'importe quelle commande.
        allow read, update, delete: if isAdmin();
    }

    // Règle pour la requête `collectionGroup` (pour le panneau d'administration)
    // Permet à l'admin de lister TOUTES les commandes de TOUS les utilisateurs.
    match /{path=**}/orders/{orderId} {
      allow list: if isAdmin();
    }
  }
}
